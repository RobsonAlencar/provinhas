<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/tv_adapter_label_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_prova"
        android:layout_marginRight="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_adapter_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_adapter_label_nome"/>

    <TextView
        android:id="@+id/tv_adapter_label_disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_disciplina"
        android:layout_below="@id/tv_adapter_nome"
        android:layout_marginRight="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_adapter_disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_adapter_nome"
        android:layout_toRightOf="@id/tv_adapter_label_disciplina"/>


</RelativeLayout>